(in-package :lem-user)

(define-color-theme "fruity" ()
  (foreground "#FFFFFF")
  (background "#121212")
  (cursor :foreground "#121212" :background "#FFFFFF")
  (syntax-warning-attribute :foreground nil :background "#121212")
  (syntax-string-attribute :foreground "#0087d7" :background "#121212")
  (syntax-comment-attribute :foreground "#008700" :background "#121212")
  (syntax-keyword-attribute :foreground "#ff5f00" :background "#121212")
  (syntax-constant-attribute :foreground "#0087d7" :background "#121212")
  (syntax-function-name-attribute :foreground "#ff0087" :background "#121212")
  (syntax-variable-attribute :foreground "#ff5f00" :background "#121212")
  (syntax-type-attribute :foreground "#d7d7af" :background "#121212")
  (syntax-builtin-attribute :foreground nil :background "#121212"))
